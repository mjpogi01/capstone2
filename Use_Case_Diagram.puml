}

package "Artist Features" {
  usecase UC43_ViewArtistDashboard as "View Dashboard"
  usecase UC44_ViewTasks as "View Tasks"
  usecase UC45_UpdateTaskStatus as "Update Task Status"
  usecase UC46_ViewWorkload as "View Workload Overview"
  usecase UC47_ManageArtistProfile as "Manage Profile"
  usecase UC48_CustomerChats as "Customer Chats\n(Communicate with Customers)"
